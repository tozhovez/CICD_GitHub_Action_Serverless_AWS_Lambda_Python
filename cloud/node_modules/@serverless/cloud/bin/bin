#!/usr/bin/env node
'use strict'

require('../src/utils/validateNodeVersion')()
require('../src/utils/setStage')()

const isCI = require('../src/utils/isCI')
const CLI = require('../src/context/CLI')
const CI = require('../src/context/CI')

;(async () => {
  if (isCI) {
    const ci = new CI()
    return await ci.run()
  }
  const cli = new CLI()
  return await cli.run()
})()
